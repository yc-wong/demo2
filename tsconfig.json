{
    "compilerOptions": {
        "skipLibCheck": false,
        "target": "es2017",
        "module": "AMD",
        "outFile": "lib/index.js",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "declaration": false,
        "removeComments": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "."
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "lib"
    ]
}